<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Domotica.Views.OverviewPage"
             Title="Overzicht">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Settings" Clicked="ToolbarItem_Clicked">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Margin="16" VerticalOptions="Center">
            <Label x:Name="DisplaySensorValue" Text="0" FontSize="64" HorizontalOptions="Center"/>
            <Button x:Name="updateSensor" Text="Update one sensor" Clicked="UpdateSensor_Clicked"/>
            <Button x:Name="updateSensors" Text="Update Sensors" Clicked="UpdateSensors_Clicked"/>
            <Button x:Name="throwFood" Text="Gooi eten" Pressed="ThrowFood_Pressed" Released="ThrowFood_Released"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>