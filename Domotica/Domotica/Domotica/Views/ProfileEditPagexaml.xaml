<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Domotica.Views.ProfileEditPagexaml"
             Title="Bewerken">
    <ContentPage.Content>
        <StackLayout Margin="16">
            <ScrollView>
                <StackLayout Orientation="Vertical">
                    <Label Text="Naam"/>
                    <Entry x:Name="EditProfileName"/>
                    <Label Text="Type dier (Optioneel)"/>
                    <Entry x:Name="EditAnimalType"/>
                    <Label Text="RFID (optioneel)"/>
                    <Entry x:Name="EditProfileRFID"/>
                    <Label Text="Standaard portiegrootte"/>
                    <Entry x:Name="EditProfilePortion"/>

                    <Button Text="Add" HorizontalOptions="Center" Padding="2" Margin="0,16,0,0" WidthRequest="96" HeightRequest="32" Clicked="Button_Clicked"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>