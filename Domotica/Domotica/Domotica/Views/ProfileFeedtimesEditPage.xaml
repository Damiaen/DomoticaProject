<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Domotica.Views.ProfileFeedtimesEditPage"
             Title="Bewerk aangemaakte tijd">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" Clicked="ToolbarItem_Clicked">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Margin="16">
            <ScrollView>
                <StackLayout Orientation="Vertical">
                    <Label Text="Omschrijving (Optioneel)"/>
                    <Entry x:Name="scheduleDescription"/>
                    <Label Text="Portiegrootte (Indien anders dan standaard)"/>
                    <Entry x:Name="schedulePortionSize"/>
                    <Label Text="Datum voor voer"/>
                    <DatePicker x:Name="DatePickerFeedTimes"
                                Format="D"/>
                    <Label Text="Voertijd"/>
                    <TimePicker x:Name="timePicker"
                                Time="12:00"
                                Format="hh:mm"/>
                    <Button Text="Updaten" HorizontalOptions="Center" Padding="2" Margin="0,16,0,0" HeightRequest="48" Clicked="Button_Clicked"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>