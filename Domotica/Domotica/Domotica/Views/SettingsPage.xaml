<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Domotica.Views.SettingsPage"
             Title="Instellingen">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="32">
            <Label Text="IP van Arduino"/>
            <Entry x:Name="IP_Adress"/>
            <Label Text="Automatisch updaten voederdata"/>
            <Switch x:Name="Auto_Update" IsToggled="{Binding Auto_update}"></Switch>
            <Label Text="Opslaan logs op Arduino"/>
            <Switch x:Name="RFID_Update" IsToggled="{Binding RFID_logs}"></Switch>
            
            <Button Text="Updaten" HorizontalOptions="Center" Padding="2" Margin="0,16,0,0" HeightRequest="32" Clicked="Button_Clicked"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>